{{> menu id="updatemember"}}

<div class="ui two column grid basic middle aligned segment">
    <div class="column">
        <form class="ui stacked segment form" action="/updatemember" method="POST">
            <h3 class="ui header">Settings</h3>
            <div class="field">
                <label>Name</label>
                <input value="{{member.name}}" type="text" name="name">
            </div>
            <div class="two fields">
                <div class="field">
                    <label>Email</label>
                    <input value="{{member.email}}" type="text" name="email">
                </div>
                <div class="field">
                    <label>Gender</label>
                    <input value="{{member.gender}}" type="text" name="gender">
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label>Height</label>
                    <input value="{{member.height}}" type="text" name="height">
                </div>
                <div class="field">
                    <label>Starting Weight</label>
                    <input value="{{member.startingweight}}" type="text" name="startingweight">
                </div>
            </div>
            <div class="field">
                <label>Password</label>
                <input type="password" value="{{member.password}}" name="password">
            </div>
            <button class="ui blue submit button">Update</button>
        </form>
    </div>
    <div class="column">
        <img class="ui centered image"
             src="https://cdn.glitch.com/21dabb7b-0fc8-45a6-939a-0aa0e5afdc81%2Farrows.jpeg?1535802059326">
    </div>
</div>